
{
  "appId": "com.ciphershell.balance",
  "productName": "Cipher Shell Balance",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron.js",
    "package.json"
  ],
  "win": {
    "target": "nsis",
    "icon": "public/favicon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
